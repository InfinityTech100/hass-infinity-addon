  <!-- script to navigate between panels -->
    <script>
      home = document.getElementById("home-panel");
      newDevicePanel = document.getElementById("new-device-panel");
      settingPanel = document.getElementById("setting-panel");
      DevicePanel = document.getElementById("device-panel");

      function hidePanel(panel, enable) {
        panel.className = enable === true ? "" : "hidden";
      }

      function navigate(panel) {
        switch (panel) {
          case "home":
          hidePanel(home, true);
            hidePanel(newDevicePanel, false);
            hidePanel(settingPanel, false);
            hidePanel(DevicePanel, false);
            break;
          case "setting":
            hidePanel(home, false);
            hidePanel(newDevicePanel, false);
            hidePanel(settingPanel, true);
            hidePanel(DevicePanel, false);
            break;
          case "new-device":
            hidePanel(home, false);
            hidePanel(newDevicePanel, true);
            hidePanel(settingPanel, false);
            hidePanel(DevicePanel, false);
            break;
          case "device":
            hidePanel(home, false);
            hidePanel(newDevicePanel, false);
            hidePanel(settingPanel, false);
            hidePanel(DevicePanel, true);
            break;
          default:
            break;
        }
      }
    </script>
  


